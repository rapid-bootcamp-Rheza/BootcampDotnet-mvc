@model CustomerViewModel
@{
    ViewData["Title"] = "Customer Add Data";
}

<div >
    <h1 >Form Add Customer</h1>
    <form asp-action="Save" method="post">
        <div class="form-group">
            <label asp-for="CustomerId">Customer Id</label>
            <input asp-for="CustomerId" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="CustomerName">Customer Name</label>
            <input asp-for="CustomerName" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <input asp-for="Gender" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="City">City</label>
            <input asp-for="City" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Province">Province</label>
            <input asp-for="Province" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
