@model RentalViewModel
@{
    ViewData["Title"] = "Rental Details";
}

<div >
    <h2>Rental Detail</h2>
    <table calss = "table tab-content">
        <tbody>
            <tr>
                <th>ID</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Customer Name</th>
                <td>@Model.NamaPenyewa</td>
            </tr>
            <tr>
                <th>Jenis Kendaraan</th>
                <td>@Model.Jenis</td>
            </tr>
            <tr>
                <th>Merk Kendaraan</th>
                <td>@Model.Merk</td>
            </tr>
            <tr>
                <th>Harga Sewa/hari</th>
                <td>@Model.Sewa</td>
            </tr>
            <tr>
                <th>Lama Sewa (hari)</th>
                <td>@Model.HariSewa</td>
            </tr>
         
        </tbody>
    </table>
</div>
