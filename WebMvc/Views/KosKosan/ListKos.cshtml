@model List<KosViewModel>
@{
    ViewData["Title"] = "Kos List";
}

<div >
    <h2>Kos List</h2>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Status</th>
                <th>Harga Sewa/Bulan</th>
                <th>Jenis Kamar</th>
                <th>Waktu (Bulan)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NamaPenyewa</td>
                    <td>@item.Gender</td>
                    <td>@item.Status</td>
                    <td>@item.HargaSewa</td>
                    <td>@item.JenisKamar</td>
                    <td>@item.Waktu</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
               
            }
            
        </tbody>
        <a asp-action="Add" class="btn btn-sm btn-submit">Add</a>
      

    </table>
</div>
